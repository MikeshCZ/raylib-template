{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "init",
            "type": "shell",
            "command": "[ ! -d 'build' ] && mkdir build ; cd build && cmake .. -DCMAKE_BUILD_TYPE=Debug",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": [],
            "windows": {
                "command": "if (-not (Test-Path -Path 'build')) { New-Item -ItemType Directory -Path 'build' } ; Set-Location -Path 'build' ; cmake .. -DCMAKE_BUILD_TYPE=Debug"
            }
        },
        {
            "label": "build",
            "type": "shell",
            "command": "cd build && make -j8",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": [],
            "dependsOn": "init",
            "windows": {
                "command": "cd build; ninja"
            }
        }
    ]
}